<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>crud</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
      .required:after {
        content:" *";
        color: red;
      }
    </style>
</head>
<body>
  <% if(locals.error){locals.error.forEach(function(errors){ %>
    <div class="alert alert-danger" role="alert"><%= errors.msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
    </div>
    <% })} %>

    
    
    <form action="/edit/<%= users.username %>" method="post" name="form1" enctype='multipart/form-data'>
     
      <label class="required">Profile</label>
      
      <input class="form-control form-control-lg" type="file" name="image" />
        <img src="/<%= users.image %>" width="50" class="img-thumbnail mt-1">
        <input type="hidden" name="old_image" value="<%= users.image %>"></br>
        
        <label class="required" >First Name : </label>
        
        <input type="text" name="firstname" class="form-control" id="firstname"  placeholder="Enter name"   value="<%= users.firstname %>">
        <% if(locals.newError) { %>
          <span style="color:rgb(234, 37, 37);">
            <strong><%= newError.firstname %></strong></span></br>
          <% } %>
        
        <label class="required">Last Name : </label>
        <input type="text" name="Lastname" class="form-control" id="Lastname"  placeholder="Enter name" value="<%= users.Lastname %>">
        <% if(locals.newError) { %>
          <span style="color:rgb(234, 37, 37);">
            <strong><%= newError.Lastname %></strong></span></br>
          <% } %>
        <label class="required">Username : </label>
        <input type="text" name="username" class="form-control" id="username" placeholder="Enter username" value="<%= users.username %>">
        <% if(locals.newError) { %>
          <span style="color:rgb(234, 37, 37);">
            <strong><%= newError.username %></strong></span></br>
          <% } %>
        <label class="required">Email : </label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Enter email" value="<%= users.email %>">
        <% if(locals.newError) { %>
          <span style="color:rgb(234, 37, 37);">
            <strong><%= newError.email %></strong></span></br>
          <% } %>
        <label class="required">Mobile no : </label>
        <input type="mobileno" name="mobileno" class="form-control" id="mobileno" placeholder="Enter mobileno" value="<%= users.mobileno %>">
        <% if(locals.newError) { %>
          <span style="color:rgb(234, 37, 37);">
            <strong><%= newError.mobileno %></strong></span></br>
          <% } %>
        <label>Password : </label>
        <input type="text" name="password" class="form-control" id="password" placeholder="Enter password" value="">
        <label>dob : </label>
        <input type="date" name="dob" class="form-control" id="dob" placeholder="Enter dob" value="<%= newdob %>"></br>
        <label>startdate : </label>
        <input type="date" name="startdate" class="form-control" id="startdate" placeholder="Enter startdate" value="<%= newstartdate %>">
        <label>attendance : </label>
        <% if(users.attendance == 'present') {%>
        <input type="radio" name="attendance" class="radio" id="present" value="present" checked><label for="present">Present</label>
        <input type="radio" name="attendance" class="radio" id="notpresent" value="notpresent"><label for="notpresent">Not present</label><br>
        <% }else {%>
            <input type="radio" name="attendance" class="radio" id="present" value="present" ><label for="present">Present</label>
        <input type="radio" name="attendance" class="radio" id="notpresent" value="notpresent" checked><label for="notpresent">Not present</label><br>
        <% } %>
        <label>status : </label>
        <% if(users.status == 'married') {%>
        <input type="radio" name="status" class="radio" id="married" value="married" checked><label for="married">married</label>
        <input type="radio" name="status" class="radio" id="unmarried" value="unmarried"><label for="unmarried">unmarried</label><br>
        <% }else {%>
        <input type="radio" name="status" class="radio" id="married" value="married" ><label for="married">married</label>
        <input type="radio" name="status" class="radio" id="unmarried" value="unmarried" checked><label for="unmarried">unmarried</label><br>
        <% } %>
        <label>Hobby :</label>
        <select id="select1" name="hobby">
          <% if(users.hobby == 'Cricket') { %>
            <option  value="Cricket">Cricket</option>
            <option value="Football">Football</option>
            <option value="Reading">Reading</option>
          <%} else if(users.hobby == 'Football') { %>
            <option value="Football">Football</option>
            <option  value="Cricket">Cricket</option>
            <option value="Reading">Reading</option>
          <% } else { %>
            <option value="Reading">Reading</option>
            <option  value="Cricket">Cricket</option>
            <option value="Football">Football</option>
          <% } %>
            
        </select><br>
       
       
        <input type="submit" class="btn btn-primary"  value="Update" >
        <a href="/" class="btn btn-primary">cancel</a>

        
        
    </form>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script> 


<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>


</body>
</html>